{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["dom", "es2015", "es2017"],
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true
    },
    "include": ["src/**/*"]
  }